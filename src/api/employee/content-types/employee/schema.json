{
  "kind": "collectionType",
  "collectionName": "employees",
  "info": {
    "singularName": "employee",
    "pluralName": "employees",
    "displayName": "Employee"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phone": {
      "type": "string"
    },
    "socialHandles": {
      "type": "component",
      "component": "employee.social-handle",
      "repeatable": true,
      "required": true
    },
    "position": {
      "type": "string",
      "required": true
    },
    "employmentType": {
      "type": "enumeration",
      "enum": [
        "full-time",
        "part-time",
        "contract",
        "intern"
      ],
      "required": true
    },
    "department": {
      "type": "string"
    },
    "joinedDate": {
      "type": "date",
      "required": true
    },
    "offerLetterId": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "currentStatus": {
      "type": "enumeration",
      "enum": [
        "active",
        "inactive"
      ],
      "default": "active"
    }
  }
}
